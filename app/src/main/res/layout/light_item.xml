<?xml version="1.0" encoding="utf-8"?>
<com.example.cchen.test1.view.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="light">

    <ImageView
        android:id="@+id/img_light"
        style="@style/mycheckbox"
        android:layout_width="@dimen/light_size"
        android:layout_height="@dimen/light_size"
        android:layout_centerHorizontal="true"
        android:clickable="false" />

    <TextView
        android:id="@+id/txt_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_light"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:layout_marginTop="4dp"
        android:text="ttt"
        android:textColor="@color/black"
        android:textSize="19sp" />
</com.example.cchen.test1.view.CheckableRelativeLayout>